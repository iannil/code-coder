{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "noUncheckedIndexedAccess": false,
    "paths": {
      "@/*": ["./src/*"]

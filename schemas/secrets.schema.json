{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://code-coder.com/schemas/secrets.json",
  "title": "CodeCoder Secrets",
  "description": "Credentials and API keys (stored separately for security)",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema reference"
    },
    "llm": {
      "$ref": "#/$defs/LlmSecretsConfig"
    },
    "channels": {
      "$ref": "#/$defs/ChannelSecretsConfig"
    },
    "external": {
      "$ref": "#/$defs/ExternalSecretsConfig"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "LlmSecretsConfig": {
      "type": "object",
      "description": "LLM provider API keys",
      "properties": {
        "anthropic": {
          "type": ["string", "null"],
          "description": "Anthropic API key"
        },
        "openai": {
          "type": ["string", "null"],
          "description": "OpenAI API key"
        },
        "deepseek": {
          "type": ["string", "null"],
          "description": "DeepSeek API key"
        },
        "google": {
          "type": ["string", "null"],
          "description": "Google AI API key"
        },
        "openrouter": {
          "type": ["string", "null"],
          "description": "OpenRouter API key"
        },
        "groq": {
          "type": ["string", "null"],
          "description": "Groq API key"
        },
        "mistral": {
          "type": ["string", "null"],
          "description": "Mistral API key"
        },
        "xai": {
          "type": ["string", "null"],
          "description": "xAI API key"
        },
        "together": {
          "type": ["string", "null"],
          "description": "Together AI API key"
        },
        "fireworks": {
          "type": ["string", "null"],
          "description": "Fireworks AI API key"
        },
        "perplexity": {
          "type": ["string", "null"],
          "description": "Perplexity API key"
        },
        "cohere": {
          "type": ["string", "null"],
          "description": "Cohere API key"
        },
        "cloudflare": {
          "type": ["string", "null"],
          "description": "Cloudflare Workers AI API key"
        },
        "venice": {
          "type": ["string", "null"],
          "description": "Venice AI API key"
        },
        "moonshot": {
          "type": ["string", "null"],
          "description": "Moonshot API key"
        },
        "glm": {
          "type": ["string", "null"],
          "description": "GLM (Zhipu) API key"
        },
        "minimax": {
          "type": ["string", "null"],
          "description": "MiniMax API key"
        },
        "qianfan": {
          "type": ["string", "null"],
          "description": "Qianfan API key"
        }
      },
      "additionalProperties": {
        "type": ["string", "null"],
        "description": "Additional LLM provider API key"
      }
    },
    "ChannelSecretsConfig": {
      "type": "object",
      "description": "IM channel credentials",
      "properties": {
        "telegram_bot_token": {
          "type": ["string", "null"],
          "description": "Telegram Bot API token"
        },
        "discord_bot_token": {
          "type": ["string", "null"],
          "description": "Discord Bot token"
        },
        "slack_bot_token": {
          "type": ["string", "null"],
          "description": "Slack Bot token"
        },
        "slack_app_token": {
          "type": ["string", "null"],
          "description": "Slack App token for Socket Mode"
        },
        "feishu_app_id": {
          "type": ["string", "null"],
          "description": "Feishu App ID"
        },
        "feishu_app_secret": {
          "type": ["string", "null"],
          "description": "Feishu App Secret"
        }
      },
      "additionalProperties": {
        "type": ["string", "null"]
      }
    },
    "ExternalSecretsConfig": {
      "type": "object",
      "description": "External service credentials",
      "properties": {
        "lixin": {
          "type": ["string", "null"],
          "description": "Lixin (理杏仁) API token for A-share market data"
        },
        "itick": {
          "type": ["string", "null"],
          "description": "iTick API key for A-share market data"
        },
        "cloudflare_tunnel": {
          "type": ["string", "null"],
          "description": "Cloudflare Tunnel token"
        },
        "ngrok_auth": {
          "type": ["string", "null"],
          "description": "ngrok authentication token"
        },
        "elevenlabs": {
          "type": ["string", "null"],
          "description": "ElevenLabs API key for TTS"
        }
      },
      "additionalProperties": {
        "type": ["string", "null"]
      }
    }
  }
}
